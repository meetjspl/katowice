#sociallinks
  display: inline-block
  list-style: none
  padding: 0
  margin: 0
  li
    display: inline-block
  li:after
    content: ", "
  li:last-child:after
    content: ""
  li:nth-last-child(2):after
    content: " i "

.post-list
  display: flex
  flex-direction: column
  padding: 0
  .post-item
    display: flex
    flex-direction: column-reverse
    list-style-type: none
    margin-left: 0
    margin-bottom: 1.5rem
    .post-meta
      display: flex
      flex-direction: column
      flex: 1
      margin-right: 16px
      font-size: 0.857em

      &.event-details
        color: $color-accent

        strong
          font-size: 1.16em

    .post-title
      flex: 2
    .meta
      font-size: 1.16em
      color: $color-dark

@media (min-width: 480px)
  .post-list
    .post-item
      flex-direction: row
      .meta
        text-align: left
