#header
  max-width: 710px
  width: 100%
  margin: 0 auto 3rem auto

  h1, .h1
    letter-spacing: 0.01em
    font-size: 1.5rem
    line-height: 2rem
    font-style: normal
    font-weight: 700
    color: $color-text
    margin-top: 0
    margin-bottom: 0
    antialias()

  a
    color: inherit
    text-decoration: none
    background: none

  #logo
    display: inline-block
    float: left
    margin-right: 10px
    width: logo-width
    height: logo-height
    background-repeat: no-repeat
    background-size: logo-width logo-height

  #nav
    letter-spacing: 0.01em
    font-size: .8rem
    font-style: normal
    font-weight: 200
    color: $color-link
    ul
      list-style-type: none
      margin: 0
      padding: 0
      line-height: 15px
      a
        margin-right: 10px
        color: color-accent
      a:hover
          underline(5px, $color-link)
      li
        display: inline-block
        vertical-align: middle
        margin-right: 5px
        border-right: 1px dotted $color-link
      .icon
        display: none
      li:last-child
        border-right: 0
        margin-right: 0
        a
          margin-right: 0

@media screen and (max-width:540px)
  #header
    h1, .h1
      font-size: 1.2em

@media screen and (max-width:480px)
  #header #title
    padding-top: (logo-height / 2) - 16
    padding-bottom: (logo-height / 2) - 16
  #header #nav
    ul
      a:hover
        background: none
      li
        display: none
        border-right: 0
      li.icon
        display: inline-block
        position: absolute
        top: 55px
        right: 1rem
    ul.responsive
      li
        display: block;
    li:not(:first-child)
        padding-top: 1rem
        padding-left: logo-width + 20px
        font-size: 1em

@media screen and (max-width:320px)
  #header
    #title
      display: none
    #logo
      margin-right: 5px
      width: (logo-width / 1.5)
      height: (logo-height / 1.5)
      background-size: (logo-width / 1.5) (logo-height / 1.5)
    #nav
      ul
        li.icon
          top: 40px